<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Servlets -->

    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>com.yarkin.careerguidance.servlets.HomeServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.yarkin.careerguidance.servlets.auth.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.yarkin.careerguidance.servlets.auth.LogoutServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LoginAdmin</servlet-name>
        <servlet-class>com.yarkin.careerguidance.servlets.admin.auth.LoginAdminServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LogoutAdmin</servlet-name>
        <servlet-class>com.yarkin.careerguidance.servlets.admin.auth.LogoutAdminServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>StartTest</servlet-name>
        <servlet-class>com.yarkin.careerguidance.servlets.StartTestServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>TestResult</servlet-name>
        <servlet-class>com.yarkin.careerguidance.servlets.TestResultServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>HomeAdmin</servlet-name>
        <servlet-class>com.yarkin.careerguidance.servlets.admin.HomeAdminServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AllExams</servlet-name>
        <servlet-class>com.yarkin.careerguidance.servlets.admin.exam.ShowAllExamsServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AddExams</servlet-name>
        <servlet-class>com.yarkin.careerguidance.servlets.admin.exam.AddExamsServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DeleteExams</servlet-name>
        <servlet-class>com.yarkin.careerguidance.servlets.admin.exam.DeleteExamsServlet</servlet-class>
    </servlet>

    <!-- Servlets mapping -->

    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>StartTest</servlet-name>
        <url-pattern>/user/start/test</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>TestResult</servlet-name>
        <url-pattern>/user/get/test/result</url-pattern>
    </servlet-mapping>

    <!-- Admin servlets -->

    <servlet-mapping>
        <servlet-name>HomeAdmin</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LoginAdmin</servlet-name>
        <url-pattern>/admin/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LogoutAdmin</servlet-name>
        <url-pattern>/admin/logout</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AllExams</servlet-name>
        <url-pattern>/admin/zno/all</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AddExams</servlet-name>
        <url-pattern>/admin/zno/add</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DeleteExams</servlet-name>
        <url-pattern>/admin/zno/delete</url-pattern>
    </servlet-mapping>


    <!-- Default mapping for static resources (e.g. css, js, img, ...) -->

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/resources/*</url-pattern>
    </servlet-mapping>

    <!-- Filters -->

    <filter>
        <filter-name>UserSecurity</filter-name>
        <filter-class>com.yarkin.careerguidance.filters.UserSecurityFilter</filter-class>
    </filter>

    <filter>
        <filter-name>AdminSecurity</filter-name>
        <filter-class>com.yarkin.careerguidance.filters.AdminSecurityFilter</filter-class>
    </filter>

    <!-- Filters mapping -->

    <filter-mapping>
        <filter-name>UserSecurity</filter-name>
        <url-pattern>/user/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>AdminSecurity</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
</web-app>