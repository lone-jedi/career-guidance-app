<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Servlets -->

    <servlet>
        <servlet-name>Home</servlet-name>
        <servlet-class>com.yarkin.careerguidance.servlets.HomeServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.yarkin.careerguidance.servlets.auth.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.yarkin.careerguidance.servlets.auth.LogoutServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>com.yarkin.careerguidance.servlets.auth.RegisterServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>EditUser</servlet-name>
        <servlet-class>com.yarkin.careerguidance.servlets.user.UserEditServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LoginAdmin</servlet-name>
        <servlet-class>com.yarkin.careerguidance.servlets.admin.auth.LoginAdminServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LogoutAdmin</servlet-name>
        <servlet-class>com.yarkin.careerguidance.servlets.admin.auth.LogoutAdminServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AllUsers</servlet-name>
        <servlet-class>com.yarkin.careerguidance.servlets.admin.user.AllUsersServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DeleteUser</servlet-name>
        <servlet-class>com.yarkin.careerguidance.servlets.admin.user.DeleteUserServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>StartTest</servlet-name>
        <servlet-class>com.yarkin.careerguidance.servlets.StartTestServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>TestResult</servlet-name>
        <servlet-class>com.yarkin.careerguidance.servlets.TestResultServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>HomeAdmin</servlet-name>
        <servlet-class>com.yarkin.careerguidance.servlets.admin.HomeAdminServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AllExams</servlet-name>
        <servlet-class>com.yarkin.careerguidance.servlets.admin.exam.ShowAllExamsServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AddExam</servlet-name>
        <servlet-class>com.yarkin.careerguidance.servlets.admin.exam.AddExamServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DeleteExam</servlet-name>
        <servlet-class>com.yarkin.careerguidance.servlets.admin.exam.DeleteExamServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>EditExam</servlet-name>
        <servlet-class>com.yarkin.careerguidance.servlets.admin.exam.EditExamServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AllUniversities</servlet-name>
        <servlet-class>com.yarkin.careerguidance.servlets.admin.university.AllUniversitiesServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AddUniversity</servlet-name>
        <servlet-class>com.yarkin.careerguidance.servlets.admin.university.AddUniversityServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DeleteUniversity</servlet-name>
        <servlet-class>com.yarkin.careerguidance.servlets.admin.university.DeleteUniversityServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>EditUniversity</servlet-name>
        <servlet-class>com.yarkin.careerguidance.servlets.admin.university.EditUniversityServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>OneUniversity</servlet-name>
        <servlet-class>com.yarkin.careerguidance.servlets.admin.university.OneUniversityServlet</servlet-class>
    </servlet>

