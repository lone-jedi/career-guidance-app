    <!-- Servlets mapping -->

    <servlet-mapping>
        <servlet-name>Home</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>StartTest</servlet-name>
        <url-pattern>/user/start/test</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>TestResult</servlet-name>
        <url-pattern>/user/get/test/result</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>EditUser</servlet-name>
        <url-pattern>/user/edit</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!-- Admin servlets -->

    <servlet-mapping>
        <servlet-name>HomeAdmin</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LoginAdmin</servlet-name>
        <url-pattern>/admin/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LogoutAdmin</servlet-name>
        <url-pattern>/admin/logout</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AllExams</servlet-name>
        <url-pattern>/admin/zno/all</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AddExam</servlet-name>
        <url-pattern>/admin/zno/add</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DeleteExam</servlet-name>
        <url-pattern>/admin/zno/delete</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>EditExam</servlet-name>
        <url-pattern>/admin/zno/edit</url-pattern>
    </servlet-mapping>

    <!-- University-->

    <servlet-mapping>
        <servlet-name>AllUniversities</servlet-name>
        <url-pattern>/admin/university/all</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AddUniversity</servlet-name>
        <url-pattern>/admin/university/add</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DeleteUniversity</servlet-name>
        <url-pattern>/admin/university/delete</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>EditUniversity</servlet-name>
        <url-pattern>/admin/university/edit</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>OneUniversity</servlet-name>
        <url-pattern>/admin/university/one</url-pattern>
    </servlet-mapping>

    <!-- User -->

    <servlet-mapping>
        <servlet-name>AllUsers</servlet-name>
        <url-pattern>/admin/user/all</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DeleteUser</servlet-name>
        <url-pattern>/admin/user/delete</url-pattern>
    </servlet-mapping>

    <!-- Default mapping for static resources (e.g. css, js, img, ...) -->

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/resources/*</url-pattern>
    </servlet-mapping>

    <!-- Filters -->

    <filter>
        <filter-name>UserSecurity</filter-name>
        <filter-class>com.yarkin.careerguidance.filters.UserSecurityFilter</filter-class>
    </filter>

    <filter>
        <filter-name>AdminSecurity</filter-name>
        <filter-class>com.yarkin.careerguidance.filters.AdminSecurityFilter</filter-class>
    </filter>

    <!-- Filters mapping -->

    <filter-mapping>
        <filter-name>UserSecurity</filter-name>
        <url-pattern>/user/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>AdminSecurity</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
</web-app>